<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Create Product</title>
  <link href="/bootstrap/css/bootstrap.css" rel="stylesheet" type="text/css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"
    integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA=="
    crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>

<body>
  <div class="container position-absolute top-50 start-50 translate-middle">
    <div class="row">
      <div class="col-lg-4"></div>
      <div class="col-lg-4 pt-5 pb-5 rounded-5" style="background-color: #bcc6cf;">
        <form action="<%= product.url %>" method="post" enctype="multipart/form-data">
          <h2 class="d-flex justify-content-center text-light fw-normal mb-3">Create product</h2>
          <div class="input-group mb-3 ps-5 pe-5">
            <span class="input-group-text bg-white"><i class="fa-brands fa-product-hunt"></i></span>
            <input type="text" name="name" value="<%= product.name %>" class="form-control" placeholder="Name">
          </div>
          <div class="input-group mb-3 ps-5 pe-5">
            <span class="input-group-text bg-white"><i class="fa-brands fa-product-hunt"></i></span>
            <select class="form-select" aria-label="Default select example" name="category">
              <% categories.forEach(c=>{  %>
                <option value="<%= c._id %>" <%= c._id == product.category.id ? 'selected' : ''%>><%= c.name %></option>    
              <% }) %>
            </select>
          </div>
          <div class="input-group mb-3 ps-5 pe-5">
            <span class="input-group-text bg-white"><i class="fa-brands fa-product-hunt"></i></span>
            <select class="form-select" aria-label="Default select example" name="brand">
              <% brands.forEach(b=>{  %>
                <option value="<%= b._id %>" <%= b._id == product.brand.id ? 'selected' : ''%>><%= b.name %></option>    
              <% }) %>
            </select>
          </div>
          <div class="input-group mb-3 ps-5 pe-5">
            <span class="input-group-text bg-white"><i class="fa-solid fa-money-bill"></i></span>
            <input type="number" name="price" value="<%= product.price %>" class="form-control" placeholder="Price">
          </div>
          <div class="input-group mb-3 ps-5 pe-5">
            <span class="input-group-text bg-white"><i class="fa-solid fa-audio-description"></i></span>
            <textarea type="text" name="description" class="form-control"
              placeholder="Description"><%= product.description %></textarea>
          </div>
          <div class="input-group mb-3 ps-5 pe-5">
            <span class="input-group-text bg-white"><i class="fa-solid fa-image"></i></span>
            <input type="file" class="form-control" name="image" placeholder="Image">
          </div>
          <div class="form-check d-flex justify-content-center mb-3">
            <button class="btn btn-primary rounded-pill ps-5 pe-5" style="background-color: #3da0d2;"
              type="submit">CREATE PRODUCT</button>
          </div>
        </form>
      </div>
      <div class="col-lg-4"></div>
    </div>
  </div>
</body>

</html>